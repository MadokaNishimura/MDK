@chaset "utf-8"
@import "../libs/reset.css"
// @media screen and (max-width: (BREAKPOINT)px)
// *
//   outline 1px solid black

mn = (100vw / 320)
// magic number

img
  display block
  width 100%
  height auto

a
  text-decoration none
  color black

.Spot
  color #040000
  background rgba(114,200,213,0.25)

  &__title
    padding 70px 0 30px
    font-size (18 * mn)
    text-align center

    &:before
      content url("/assets/images/spot_title.svg")
      display inline-block
      width (34 * mn)
      height auto
      vertical-align middle

  &__list
    overflow hidden
    width (300 * mn)
    margin 0 auto


  &__item
    height 665px
    margin 0 auto
    border 1px solid #53C0CF
    background #53C0CF

    &:nth-child(3n)
      margin-right 0

  &__top
    color #FFFFFF
    background #53C0CF
    box-sizing border-box
    margin (12 * mn) auto

    &__title
      display table
      width (256 * mn)
      margin 0 auto (12 * mn) (12 * mn)

      &__main
        display table-cell
        font-size (16 * mn)
        line-height 0.8
        font-weight bold
        vertical-align middle

      &__icon
        display table-cell
        width (38 * mn)
        margin-right (12 * mn)
        vertical-align middle


      &__sub
        font-size (10 * mn)
        font-weight normal

    &__content
      display table
      margin 0 (12 * mn)

      &__photo
        display table-cell
        width (161 * mn)

      &__add
        display table-cell
        box-sizing border-box
        vertical-align top
        padding-left (9 * mn)
        font-size (10 * mn)
        line-height 1.3

        &__item
          display table
          margin-bottom 10px

          &:last-child
            margin-top (20 * mn)
            margin-bottom 0

        &__icon
          display table-cell
          width (9 * mn)
          height auto
          padding-right 10px

        &__text
          display table-cell
          // width (86 * mn)

      &__button
        display table-cell
        width (106 * mn)
        height (23 * mn)
        vertical-align middle
        text-align center
        font-size (11 * mn)
        color #53C0CF
        box-sizing border-box
        background #FFFFFF
        border-radius 5px


        &__text

          &:before
            content "\0025b6"
            padding-right 4px

  &__middle
    height  (365 * mn)
    padding 16px 20px
    line-height 1.4
    background #FFFFFF
    box-sizing border-box

    &__list
      margin-bottom (14 * mn)

    &__item
      width (50 * mn)
      padding-right (10 * mn)
      vertical-align top
      color #53C0CF
      line-height 1.2
      font-size (12 * mn)
      font-weight bold

    &__text
      color black
      font-size (10 * mn)
      font-weight normal

    &__bottom
      font-size 10px
      line-height 1.4
      box-sizing border-box

  &__button
    display table
    width 320px
    height 33px
    color #FFFFFF
    font-weight normal
    background #53C0CF
    box-sizing border-box

    &__left
      display table-cell
      width 50%
      height 33px
      font-size 12px
      text-align center
      color #FFFFFF
      vertical-align middle
      box-sizing border-box

      &:hover
        opacity 0.7

      &__text

        &:before
          content "\0025b6"
          padding-right 4px


    &__right
      display table-cell
      width (163 * mn)
      height (23 * mn)
      vertical-align middle
      text-align center
      font-size (11 * mn)
      color #FFFFFF
      box-sizing border-box
      background #53C0CF
      border-radius 5px

      &:hover
        opacity 0.7

      &__text

        &:before
          content url("/assets/images/spot_googlemap.svg")
          display inline-block
          width 12px
          height auto
          position absolute
          left 6px

    &__hr
      background-color #FFFFFF
      border-width 0
      width 1px
      height 23px
