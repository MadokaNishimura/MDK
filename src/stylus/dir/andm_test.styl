body
  width 375px
  margin 0 auto
  font-family sans-serif

.Recommend
  background-color #EAE9E4
  color #373737

  &__title
    font-size 20px
    text-align center
    font-family 'Montserrat', sans-serif
    padding 36px 0 23px 0

    &__sub
      font-size 10px
      display block
      text-align center

  &__list
    list-style-type none
    border-top 1px solid #FFFFFF
    width 325px
    padding 26px 0 45px
    margin 0 auto
    display flex
    flex-wrap wrap

    &__item
      width 150px
      margin 0 23px 30px 0
      position relative

      &:nth-child(even)
        margin-right 0

      &__image
        display block

      &__icon
        position absolute
        top -2px
        right -2px

      &__text

        &__top
          display flex
          align-items center
          font-family 'Montserrat', sans-serif
          font-size 8px
          margin 12px 0

          &__left
            color #C61E23
            border-bottom 1px solid #C61E23
            display inline-block

          &__right
            color #FFFFFF
            background-color #848484
            margin-left auto
            display inline-block
            padding 0 2px

        &__main
          font-size 13px
          font-weight bold

          &__sub
            font-size 10px
            color #848484
            font-weight normal

